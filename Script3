AimC:Toggle({ Title = "Wall Check", Value=true, Callback = function(v) getgenv().Config.Aim.WallCheck=v end })
AimC:Toggle({ Title = "Mostrar FOV", Callback = function(v) getgenv().Config.Aim.FOV.Enabled=v end })
AimC:Slider({ Title = "Raio FOV", Value = {Min=50, Max=600, Default=100}, Callback = function(v) getgenv().Config.Aim.FOV.Radius=v end })
AimC:Slider({ Title = "Suavidade Legit", Value = {Min=0.1, Max=1, Default=0.5}, Step=0.1, Callback = function(v) getgenv().Config.Aim.Speed=v end })

-- ESP
