EspG:Toggle({ Title = "Team Check", Value=true, Callback = function(v) getgenv().Config.ESP.TeamCheck=v end })

local EspE = TabEsp:Section({ Title = "Elementos" })
EspE:Toggle({ Title = "Box (Caixa)", Callback = function(v) getgenv().Config.ESP.Box=v end })
EspE:Toggle({ Title = "Tracer (Linha)", Callback = function(v) getgenv().Config.ESP.Tracer=v end })
EspE:Toggle({ Title = "Nome", Callback = function(v) getgenv().Config.ESP.Name=v end })
EspE:Toggle({ Title = "Vida (HP)", Callback = function(v) getgenv().Config.ESP.HP=v end })

WindUI:Notify({ Title = "Nando Hub", Content = "ESP Corrigido! Sem bugs visuais.", Duration = 5 })
