SectEsp:Toggle({ Title = "Vida (HP)", Callback = function(v) getgenv().Config.ESP.HP = v end })

TabInfo:Section({ Title = "Sobre" }):Paragraph({ Title = "Nando Hub", Desc = "v9.0 Final\nESP Completo & Hard Lock." })

WindUI:Notify({ Title = "Sucesso", Content = "ESP Completo e Hard Lock Carregados!", Duration = 5 })
